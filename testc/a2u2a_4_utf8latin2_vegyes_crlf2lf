#!/bin/bash

TD=tmpdir

TF_UTF8F_MIXED=arvizturo4_utf8latin2_vegyes_crlf.txt
TF_UTF8F=arvizturo4.txt
TF_UCSX="$TD/arvizturo4_utf8latin2_vegyes_ucsx.txt"
TF_UTF8F_UCSX="$TD/arvizturo4_r_utf8latin2_vegyes.txt"

CRLFMODE=--lf2crlf

mkdir -p "$TD"

if ! m; then
   echo "Compile error"
   exit 1
fi

bin/utf8f2ucsx --crlf2lf --utf8fmixedlatin2 <"$TF_UTF8F_MIXED" >"$TF_UCSX"
bin/ucsx2utf8f <"$TF_UCSX" >"$TF_UTF8F_UCSX"

if cmp "$TF_UTF8F" "$TF_UTF8F_UCSX"; then
   # echo "$?"
   echo "$0: OK"
else
   echo "$?"
   echo "$0: error"
fi 

